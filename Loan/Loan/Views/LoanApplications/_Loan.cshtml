
@model Loan.Models.LoanModel
@{
    ViewData["Title"] = "Customer";
}



@using (Html.BeginForm("SaveLoan", "LoanApplications", FormMethod.Post, new { role = "form", id = "saveLoan" }))
{

    <div id="LoanApplication">
        <div class="form-horizontal">
            <h4>Loan Application</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CustomerId)          
            @Html.HiddenFor(model => model.BusinessInfoId)
            @Html.HiddenFor(model => model.LoanId)

            <div class="form-group">
                @Html.LabelFor(model => model.NumberOfDefaults, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberOfDefaults, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberOfDefaults, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PaybackMonths, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PaybackMonths, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PaybackMonths, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RiskRating, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RiskRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RiskRating, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AmountRequested, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmountRequested, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AmountRequested, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalOutstandingDebt, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalOutstandingDebt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TotalOutstandingDebt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="display:none">   @Html.TextBox("LoanNextBack", "")</div>
        

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="btnBackLoan" type="button" value="Back" />&nbsp;
                    <input id="btnSubmit" type="submit" value="Submit Application" />
                </div>

            </div>
        </div>
    </div>
}